<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Definición de la secuencia para los nombres de pacientes -->
        <record id="seq_nombre_paciente" model="ir.sequence">
            <field name="name">Secuencia para Nombre de Pacientes</field>
            <field name="code">name.paciente.sequence</field>
            <field name="prefix">PA</field> <!-- Prefijo de la secuencia -->
            <field name="padding">6</field> <!-- Relleno de ceros a la izquierda -->
            <field name="number_increment">1</field> <!-- Incremento de la secuencia -->
            <field name="number_next">1</field> <!-- Primer número de la secuencia -->
        </record>
    </data>
</odoo>